[Unit]
Description=Webservice for aircontrol on port 8888
Documentation=https://example.com
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/nodejs/aircontrol
ExecStart=/usr/bin/node /var/nodejs/aircontrol/aircontrol.js
Restart=on-failure

[Install]
WantedBy=multi-user.target
